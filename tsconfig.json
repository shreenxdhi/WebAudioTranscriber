{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Module Resolution for Client */
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom", "dom.iterable"],
    "types": ["vite/client"]
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "server/**/*.ts",
    "shared/**/*.ts",
    "vite.config.ts"
  ]
}
