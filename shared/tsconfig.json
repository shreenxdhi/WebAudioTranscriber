{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/shared",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./*"]
    },
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
