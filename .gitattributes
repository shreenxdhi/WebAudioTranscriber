# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Force these files to always use LF line endings
*.sh text eol=lf
*.py text eol=lf

# Force these files to always use CRLF line endings
*.cmd text eol=crlf
*.bat text eol=crlf

# Binary files should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.svg binary
*.mp3 binary
*.wav binary
*.mp4 binary
*.webm binary
*.mov binary

# Files that should not be normalized (kept as is)
*.sln text eol=crlf
*.suo binary
*.user text=auto
*.userosscache text=auto
*.sln.docstates text=auto

# Python files
*.py text diff=python

# Shell scripts
*.sh text eol=lf

# Ignore all test fixtures in any directory named test or tests
/test/**/*.wav binary
/test/**/*.mp3 binary

# Force shell scripts to be executable
*.sh text eol=lf

# Documentation files
*.md text
*.txt text
*.adoc text
*.rst text

# Configuration files
*.json text
*.yaml text
*.yml text
*.toml text
*.ini text
*.conf text
*.config text

# Source code
*.ts text
*.tsx text
*.js text
*.jsx text
*.mjs text
*.cjs text
*.css text
*.scss text
*.sass text
*.less text
*.html text
*.htm text
*.xml text
*.svg text
*.graphql text
*.gql text

# Lockfiles
package-lock.json text eol=lf
yarn.lock text eol=lf
pnpm-lock.yaml text eol=lf

# Git merge files
*.orig binary
*.rej binary

# Editor directories and files
.idea/ export-ignore
.vscode/ export-ignore
*.sublime-* export-ignore
*.swp export-ignore
*.swo export-ignore
.DS_Store export-ignore
Thumbs.db export-ignore
